$('.question-errors').html('<%= render 'shared/errors', resource: question %>');

<% unless question.errors.present? %>
  $("#questions-table").append('<%= j render question %>');
  $('#question_title').val('');
  $('#question_body').val('');

  $('#question-form').hide();
  $('.ask-a-question').toggle();

  $flash = $('#flash_messages').html('<%= j flash.now[:notice] %>').delay(2000).slideUp('slow');
  $flash.show().removeClass().addClass('notice');
<% else %>
  $flash = $('#flash_messages').html('<%= j flash.now[:error] %>').delay(2000).slideUp('slow');
  $flash.show().addClass('error');
<% end %>
